<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <TextView
         android:id="@+id/tv_screen_shot"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="@dimen/dp_10"
         android:text="截屏"/>

        <TextView
            android:id="@+id/tv_date_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="日期格式化"/>

        <TextView
            android:id="@+id/tv_select_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="打开系统文件选择器"/>

        <TextView
            android:id="@+id/tv_status_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="改变状态栏"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="地址选择器"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.gfq.gbaseutl.views.drop_select_view.MyDropSelectView
                android:id="@+id/drop1"
                android:layout_width="wrap_content"
                app:drop_title="Title1"
                android:layout_height="wrap_content"/>
            <com.gfq.gbaseutl.views.drop_select_view.MyDropSelectView
                android:id="@+id/drop2"
                android:layout_width="wrap_content"
                app:drop_title="Title1"
                android:layout_height="wrap_content"/>
            <com.gfq.gbaseutl.views.drop_select_view.MyDropSelectView
                android:layout_width="wrap_content"
                app:drop_title="Title1"
                android:layout_height="wrap_content"/>
            <com.gfq.gbaseutl.views.drop_select_view.MyDropSelectView
                android:layout_width="wrap_content"
                app:drop_title="Title1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</layout>